<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <system.webServer>
    <handlers>
      <add name="iisnode" path="server.js" verb="*" modules="iisnode" />
    </handlers>
    <rewrite>
      <rules>
        <rule name="BlockServerJS" stopProcessing="true">
          <match url="^server\.js$" ignoreCase="true" />
          <action type="CustomResponse" statusCode="404" statusReason="Not Found" statusDescription="Resource not found" />
        </rule>
        <rule name="NodeInspector" patternSyntax="ECMAScript" stopProcessing="true">
          <match url="^server.js\/debug[\/]?" />
        </rule>
        <rule name="API" stopProcessing="true">
          <match url="^(feedback|$)" />
          <action type="Rewrite" url="server.js" />
        </rule>
      </rules>
    </rewrite>
    <iisnode 
      nodeProcessCommandLine="node"
      loggingEnabled="true"
      logDirectory="D:\home\LogFiles"
      watchedFiles="*.js;iisnode.yml"
      nodeProcessCountPerApplication="1"
    />
  </system.webServer>
</configuration>
