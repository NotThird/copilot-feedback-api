<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <location path="." inheritInChildApplications="false">
    <system.webServer>
      <handlers>
        <add name="iisnode" path="server.js" verb="*" modules="iisnode" />
      </handlers>
      <rewrite>
        <rules>
          <rule name="app" patternSyntax="ECMAScript" stopProcessing="true">
            <match url=".*" />
            <action type="Rewrite" url="server.js" />
          </rule>
        </rules>
      </rewrite>
      <iisnode
        watchedFiles="web.config;*.js"
        node_env="production"
      />
    </system.webServer>
  </location>
</configuration>
